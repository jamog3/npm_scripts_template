{
  "name": "project-name",
  "version": "1.0.0",
  "private": true,
  "config": {
    "src": {
      "root": "src/",
      "html": "src/html/",
      "css": "src/stylesheets/",
      "img": "src/images/",
      "js": "src/javascripts/",
      "copy": "src/copy/"
    },
    "dist": {
      "root": ".temp/",
      "html": ".temp/",
      "css": ".temp/assets/stylesheets/",
      "img": ".temp/assets/images/",
      "js": ".temp/assets/javascripts/"
    },
    "build": {
      "root": "build/",
      "html": "build/",
      "css": "build/assets/stylesheets/",
      "img": "build/assets/images/",
      "js": "build/assets/javascripts/"
    }
  },
  "scripts": {
    "start": "rimraf $npm_package_config_dist_root && npm run watch",
    "build": "rimraf $npm_package_config_build_root && npm-run-all --parallel build:*",
    "css-lint": "cross-var sass-lint --config .sass-lint.yml $npm_package_config_src_css'**/*.sass' --verbose --no-exit",
    "css-sass": "cross-var node-sass --include-path=node_modules --output-style expanded --source-map true --source-map-contents true --importer node_modules/node-sass-globbing/index.js $npm_package_config_src_css'style.sass' --output $npm_package_config_dist_css",
    "css-postcss": "cross-var postcss --config postcss.config.js --replace $npm_package_config_dist_css'*.css'",
    "html-lint": "cross-var pug-lint --config .pug-lintrc $npm_package_config_src_html",
    "html-pug": "cross-var pug $npm_package_config_src_html[!_]*.pug --basedir $npm_package_config_src_html --obj \"{'rootPath': '/src/'}\" --watch --pretty --out $npm_package_config_dist_html",
    "watch": "npm-run-all --parallel watch:*",
    "watch:html": "cross-var nodemon --ext pug --watch $npm_package_config_src_html --exec 'npm-run-all --parallel html-pug html-lint'",
    "watch:css": "cross-var nodemon --ext sass --watch $npm_package_config_src_css --exec 'npm-run-all --parallel css-sass css-lint --sequential css-postcss'",
    "watch:server": "cross-var browser-sync start --server $npm_package_config_dist_root --files=$npm_package_config_dist_root'**/*.*' --startPath /"
  },
  "dependencies": {
    "bootstrap": "^4.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.0",
    "browser-sync": "^2.24.6",
    "cross-var": "^1.1.0",
    "css-mqpacker": "^7.0.0",
    "node-sass": "^4.9.2",
    "node-sass-globbing": "^0.0.23",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.5.0",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1"
  }
}
