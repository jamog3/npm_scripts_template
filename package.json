{
  "name": "project-name",
  "version": "1.0.0",
  "private": true,
  "browserslist": [
    "last 2 version",
    "> 0.5% in JP"
  ],
  "config": {
    "src": {
      "root": "src/",
      "html": "src/html/",
      "css": "src/stylesheets/",
      "img": "src/images/",
      "js": "src/javascripts/",
      "iconfont": "src/iconfonts/",
      "copy": "src/copy/"
    },
    "dist": {
      "root": ".temp/",
      "html": ".temp/",
      "css": ".temp/assets/stylesheets/",
      "img": ".temp/assets/images/",
      "js": ".temp/assets/javascripts/"
    },
    "build": {
      "root": "build/",
      "html": "build/",
      "css": "build/assets/stylesheets/",
      "img": "build/assets/images/",
      "js": "build/assets/javascripts/"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "npm run css-lint-fix"
    ]
  },
  "prettier": {},
  "scripts": {
    "start": "npm run dev",
    "dev": "rimraf $npm_package_config_dist_root && npm run watch",
    "build": "rimraf $npm_package_config_build_root && NODE_ENV=production npm-run-all build:*",
    "copy": "cross-var cpx $npm_package_config_src_copy'**/*' $npm_package_config_dist_root",
    "copy-build": "cross-var cpx $npm_package_config_src_copy'**/*' $npm_package_config_build_root",
    "css-lint-fix": "cross-var stylelint --ignore-path .gitignore --fix $npm_package_config_src_css'**/*.css'",
    "css-postcss": "cross-var postcss $npm_package_config_src_css'**/!(_)*.css' --config config/postcss.config.js --dir $npm_package_config_dist_css",
    "css-postcss-build": "cross-var postcss $npm_package_config_src_css'**/!(_)*.css' --config config/postcss.config.js --dir $npm_package_config_build_css",
    "html-lint": "cross-var pug-lint --config .pug-lintrc $npm_package_config_src_html",
    "html-pug": "cross-var pug $npm_package_config_src_html --basedir $npm_package_config_src_html --obj \"{'rootPath': '/src/'}\" --pretty --out $npm_package_config_dist_html",
    "html-pug-build": "cross-var pug $npm_package_config_src_html --basedir $npm_package_config_src_html --obj \"{'rootPath': '/src/'}\" --pretty --out $npm_package_config_build_html",
    "iconfont": "cross-var icon-font-generator $npm_package_config_src_iconfont'_icons/*.svg' --out $npm_package_config_src_copy'assets/fonts/' --cssfontsurl '../fonts/' --csspath $npm_package_config_src_css'common/_iconfonts.css' --csstp $npm_package_config_src_iconfont'_templates/_css.hbs' --htmlpath $npm_package_config_src_iconfont'list.html' --htmltp $npm_package_config_src_iconfont'_templates/_html.hbs' --types 'ttf,woff,woff2,eot' --json false --height 1000",
    "img-min": "cross-var node config/imagemin.mjs $npm_package_config_src_img $npm_package_config_dist_img",
    "img-min-build": "cross-var node config/imagemin.mjs $npm_package_config_src_img $npm_package_config_build_img",
    "js-lint": "cross-var eslint $npm_package_config_src_js",
    "js-rollup": "rollup --config config/rollup.config.js",
    "js-rollup-build": "rollup --config config/rollup.config.build.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:copy": "cross-var chokidar --initial $npm_package_config_src_copy'**/*' -c 'npm run copy'",
    "watch:css": "cross-var chokidar --initial $npm_package_config_src_css'**/*.css' -c 'npm run css-postcss'",
    "watch:html": "cross-var chokidar --initial $npm_package_config_src_html'**/*.pug' -c 'npm-run-all --parallel html-lint html-pug'",
    "watch:img": "cross-var chokidar --initial $npm_package_config_src_img'**/*' -c  'npm run img-min'",
    "watch:js": "cross-var chokidar --initial $npm_package_config_src_js -c 'npm-run-all --parallel js-lint js-rollup'",
    "watch:server": "cross-var browser-sync start --server $npm_package_config_dist_root --files=$npm_package_config_dist_html'**/*.html',$npm_package_config_dist_css'**/*.css',$npm_package_config_dist_js'**/*.js' --startPath /",
    "build:copy": "npm run copy-build",
    "build:css": "npm-run-all --sequential css-lint-fix css-postcss-build",
    "build:html": "npm-run-all --sequential html-lint html-pug-build",
    "build:img": "npm run img-min-build",
    "build:js": "npm-run-all --sequential js-lint js-rollup-build"
  },
  "dependencies": {
    "smooth-scroll": "^16.1.3",
    "what-input": "^5.2.12"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/smooth-scroll": "^16.1.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "autoprefixer": "10.4.12",
    "browser-sync": "^2.27.10",
    "chokidar-cli": "^3.0.0",
    "cpx": "^1.5.0",
    "cross-var": "^1.1.0",
    "cssnano": "^5.1.13",
    "cssnano-preset-advanced": "^5.3.8",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "icon-font-generator": "^2.1.11",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "postcss-rem": "^2.0.2",
    "postcss-reporter": "7.0.5",
    "postcss-sort-media-queries": "4.3.0",
    "postcss-webfont": "^4.0.0",
    "prettier": "^2.7.1",
    "pug": "^3.0.2",
    "pug-cli": "github:pugjs/pug-cli#master",
    "pug-lint": "^2.6.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.0",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-property-sort-order-smacss": "^9.0.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-rscss-recommended": "^1.3.1",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-prettier": "^2.0.0",
    "the-new-css-reset": "^1.7.3",
    "typescript": "^4.8.4"
  }
}
