{
  "name": "project-name",
  "version": "1.0.0",
  "private": true,
  "browserslist": [
    "last 2 version",
    "> 1% in JP"
  ],
  "config": {
    "src": {
      "root": "src/",
      "html": "src/html/",
      "css": "src/stylesheets/",
      "img": "src/images/",
      "js": "src/javascripts/",
      "iconfont": "src/iconfonts/",
      "copy": "src/copy/"
    },
    "dist": {
      "root": ".temp/",
      "html": ".temp/",
      "css": ".temp/assets/stylesheets/",
      "img": ".temp/assets/images/",
      "js": ".temp/assets/javascripts/"
    },
    "build": {
      "root": "build/",
      "html": "build/",
      "css": "build/assets/stylesheets/",
      "img": "build/assets/images/",
      "js": "build/assets/javascripts/"
    }
  },
  "scripts": {
    "start": "yarn run",
    "dev": "rimraf $npm_package_config_dist_root && npm run watch",
    "build": "rimraf $npm_package_config_build_root && npm-run-all build:*",
    "copy": "cross-var cpx $npm_package_config_src_copy'**/*' $npm_package_config_dist_root",
    "copy-build": "cross-var cpx $npm_package_config_src_copy'**/*' $npm_package_config_build_root",
    "css-lint": "cross-var sass-lint --config .sass-lint.yml $npm_package_config_src_css'**/*.sass' --verbose --no-exit",
    "css-scss": "cross-var sass --load-path=node_modules/bootstrap/scss/ --load-path=$npm_package_config_src_css --style=expanded $npm_package_config_src_css:$npm_package_config_dist_css",
    "css-scss-build": "cross-var sass --load-path=node_modules/bootstrap/scss/ --load-path=$npm_package_config_src_css --style=compressed --no-source-map $npm_package_config_src_css:$npm_package_config_build_css",
    "css-postcss": "cross-var postcss $npm_package_config_dist_css'*.css' --config config/postcss.config.js --replace",
    "css-postcss-build": "cross-var postcss $npm_package_config_build_css'*.css' --config config/postcss.config.js --replace",
    "html-lint": "cross-var pug-lint --config .pug-lintrc $npm_package_config_src_html",
    "html-pug": "cross-var pug $npm_package_config_src_html[!_]*.pug --basedir $npm_package_config_src_html --obj \"{'rootPath': '/src/'}\" --pretty --out $npm_package_config_dist_html",
    "html-pug-build": "cross-var pug $npm_package_config_src_html[!_]*.pug --basedir $npm_package_config_src_html --obj \"{'rootPath': '/src/'}\" --pretty --out $npm_package_config_build_html",
    "iconfont": "cross-var icon-font-generator $npm_package_config_src_iconfont'_icons/*.svg' --out $npm_package_config_src_copy'assets/fonts/' --fontspath '../fonts/' --csspath $npm_package_config_src_css'_partial/_iconfonts.scss' --csstp $npm_package_config_src_iconfont'_templates/_css.hbs' --htmlpath $npm_package_config_src_iconfont'list.html' --htmltp $npm_package_config_src_iconfont'_templates/_html.hbs' --types 'ttf,woff,woff2,eot' --json false --height 1000",
    "img-min": "cross-var node config/imagemin.js $npm_package_config_src_img $npm_package_config_dist_img",
    "img-min-build": "cross-var node config/imagemin.js $npm_package_config_src_img $npm_package_config_build_img",
    "js-lint": "cross-var eslint $npm_package_config_src_js",
    "js-rollup": "rollup --config config/rollup.config.js",
    "js-rollup-build": "rollup --config config/rollup.config.build.js",
    "sprite": "spritesmith --rc config/spritesmith.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:copy": "cross-var watch 'npm-run-all copy' $npm_package_config_src_copy",
    "watch:css": "cross-var watch 'npm-run-all --parallel css-scss css-lint --sequential css-postcss' $npm_package_config_src_css",
    "watch:html": "cross-var watch 'npm-run-all --parallel html-pug html-lint' $npm_package_config_src_html",
    "watch:img": "cross-var watch 'npm-run-all img-min' $npm_package_config_src_img",
    "watch:js": "cross-var watch 'npm-run-all --parallel js-lint js-rollup' $npm_package_config_src_js",
    "watch:server": "cross-var browser-sync start --server $npm_package_config_dist_root --files=$npm_package_config_dist_html'**/*.html',$npm_package_config_dist_css'**/*.css',$npm_package_config_dist_js'**/*.js' --startPath /",
    "build:copy": "npm-run-all copy-build",
    "build:css": "npm-run-all --parallel css-scss-build css-lint --sequential css-postcss-build",
    "build:html": "npm-run-all --parallel html-pug-build html-lint",
    "build:img": "npm-run-all img-min-build",
    "build:js": "npm-run-all --parallel js-rollup-build js-lint"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "smooth-scroll": "^16.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/smooth-scroll": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "autoprefixer": "9.8.6",
    "browser-sync": "^2.24.6",
    "cpx": "^1.5.0",
    "cross-var": "^1.1.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "icon-font-generator": "^2.1.8",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.1",
    "imagemin-svgo": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^7.0.2",
    "postcss-cli": "^8.0.0",
    "postcss-sort-media-queries": "^1.7.26",
    "prettier": "^2.1.2",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "sass": "^1.26.11",
    "spritesmith-cli": "^1.1.2",
    "typescript": "^4.0.3",
    "watch": "^1.0.2"
  }
}
