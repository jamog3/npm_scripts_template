{
  "name": "project-name",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "rimraf ./.temp && npm run watch",
    "build": "rimraf ./build && gulp build",
    "watch": "npm-run-all --parallel watch:*",
    "watch:html": "pug src/html/[!_]*.pug --basedir src/html/ --obj \"{\"rootPath\": \"/src/\"}\" --watch --pretty --out .temp/",
    "watch:css": "nodemon --ext sass --watch src/stylesheets/ --exec 'npm-run-all --sequential css-sass css-postcss'",
    "css-sass": "sass --load-path=node_modules --style expanded src/stylesheets/:.temp/assets/stylesheets/",
    "css-postcss": "postcss --config postcss.config.js --replace .temp/assets/stylesheets/*.css",
    "watch:server": "browser-sync start --server .temp/ --files=.temp/**/*.* --startPath /"
  },
  "dependencies": {
    "bootstrap": "^4.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.0",
    "browser-sync": "^2.24.6",
    "css-mqpacker": "^7.0.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.2",
    "sass": "^1.10.3"
  }
}
